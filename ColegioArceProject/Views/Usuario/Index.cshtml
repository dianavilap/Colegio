@model IEnumerable<ColegioArceProject.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_diseño.cshtml";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
        <h2>Usuarios del sistema</h2>
        <p> @Html.ActionLink("Crear Usuario", "Create", new { }, new { @class = "btn btn-success btn-mini " })</p>
        <table class="table">
            <tr>
                <th>
                    @Html.Label("Nombre de Usuario")
                </th>
                <th>
                    @Html.Label("Correo electrónico")
                </th>
                <th>
                    @Html.Label("Rol")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id_Usuario }, new { @class = "btn btn-success btn-sm" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id_Usuario }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>



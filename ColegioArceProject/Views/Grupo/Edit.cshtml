@model ColegioArceProject.ViewModels.GrupoViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_diseño.cshtml";
}

<h2>Editar Grupo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="row">

    <div class="col-md-12">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_grupo)

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_escolaridad, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.id_escolaridad, new SelectList(Model.EscolaridadList, "id_escolaridad", "Descripcion", "Model.DescripcionEscolaridad"), "-- Seleccionar --", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.id_escolaridad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 aligncenter">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
    @Html.HiddenFor(model => model.Activo);
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

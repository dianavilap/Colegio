@model IEnumerable<ColegioArceProject.Models.Rol>

@{
    ViewBag.Title = "Rol";
    Layout = "~/Views/Shared/_diseño.cshtml";
}


<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
        <h2>Rol</h2>
        <p>
            @Html.ActionLink("Nuevo pago", "Create", new { }, new { @class = "btn btn-success btn-mini" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id_Rol }, new { @class = "btn btn-success btn-sm" }) 

                    </td>
                </tr>
            }

        </table>

    </div>
</div>


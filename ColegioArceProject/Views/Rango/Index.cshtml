@model IEnumerable<ColegioArceProject.Models.Rango>

@{
    ViewBag.Title = "Fechas limite";
    Layout = "~/Views/Shared/_diseño.cshtml";
}

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h2>Rangos de fechas límite</h2>
        <p>
            @Html.ActionLink("Crear nuevo", "Create", new { }, new { @class = "btn btn-success btn-mini" })
        </p>
        <table class="table table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Inicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id_Rango }, new { @class = "btn btn-success btn-sm" }) |
                        @*@Html.ActionLink("Detalles", "Details", new { id = item.id_Rango }, new { @class = "btn btn-primary btn-sm" }) |*@
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id_Rango }, new { @class = "btn btn-danger btn-sm" }) |
                        <a href="/rango/imprimir/7" class="btn btn-sm btn-light">Imprimir</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-1"></div>
</div>





